@model IEnumerable<MVCFramework.Models.Entity.TextFilesList>
@{
    ViewData["Title"] = "選択画面";
}
<div class="container mt-3">
    @using (@Html.BeginForm("EditPage", "TextEditor"))
    {
        foreach (var index in Model)
        {
            <div class="content mt-4">
                <div class="card card_button" @*data-action="@Url.Action("EditPage", "TextEditor")"*@>
                    @Html.Hidden("number", 1)
                    <button class="card-body shadow btn-outline-dark">
                        <div class="stat-widget-one">
                            <div class="stat-icon dib">
                                <i class="ti-money text-success border-success">
                                </i>
                            </div>
                            <div class="dib">
                                <div class="stat-digit">@index.FileName</div>
                                <div class="stat-text">@index.Update</div>
                            </div>
                        </div>
                    </button>
                </div>
            </div>
        }
    }
</div>
